


<div class="page animated" style="animation-duration: 500ms;">
    <!-- Breadcrumbs -->
    <section class="breadcrumbs-custom bg-image context-dark" style="background-image: url(<%=image_url 'breadcrumbs-image-1.jpg' %>);">
      <div class="breadcrumbs-custom-inner">
        <div class="container breadcrumbs-custom-container">
          <div class="breadcrumbs-custom-main">
            <h6 class="breadcrumbs-custom-subtitle title-decorated">Blog</h6>
            <h2 class="breadcrumbs-custom-title">Nuestro Blog</h2>
          </div>
          <ul class="breadcrumbs-custom-path">
            <li><a href="index.html">Home</a></li>
            <li><a href="#">Blog</a></li>
            <li class="active">Blog del Conservatorio</li>
          </ul>
        </div>
      </div>
    </section>
    <section class="section section-lg">
      <div class="container">
        <div class="row row-50">
          <div class="col-lg-8">
            <article class="post-creative">
              <img src="<%= @post.image.url %>" alt="" width="571" height="353"/>
              <h3 class="post-creative-title"><%= @post.title %></h3>

              <ul class="post-creative-meta">
                <li><span class="icon mdi mdi-calendar-clock"></span>
                  <time datetime="2018">May 9, 2018 at 6:09 pm</time>
                </li>
                <li><span class="icon mdi mdi-tag-multiple"></span><a href="#">News</a></li>
              </ul>
               <p><%= @post.content %></p>

               <%= link_to 'Edit', edit_post_path(@post) %>
              <ul class="post-creative-footer">
                <li>Share this post!</li>
                <li>
                  <div class="group group-xs group-middle"><a class="icon icon-sm icon-creative mdi mdi-facebook" href="#"></a><a class="icon icon-sm icon-creative mdi mdi-twitter" href="#"></a><a class="icon icon-sm icon-creative mdi mdi-instagram" href="#"></a><a class="icon icon-sm icon-creative mdi mdi-google" href="#"></a><a class="icon icon-sm icon-creative mdi mdi-linkedin" href="#"></a></div>
                </li>
              </ul>
            </article>
            <div class="section-sm">
              <h3>Comentarios</h3>
              <div class="comment-classic-group">
                
                <% @post.comments.each do |comment| %>

                <!-- Comment Classic-->
                <article class="comment-classic">
                  <figure class="comment-classic-figure"><img class="comment-classic-image" src="<%= image_path 'comment-3-48x48.jpg' %>" alt="" width="48" height="48"/>
                  </figure>
                  <div class="comment-classic-main">
                    <p class="comment-classic-name"><%= comment.user.name %>nombre</p>
                    <div class="comment-classic-text">
                      <p><%= comment.content %></p>
                    </div>
                    <ul class="comment-classic-meta">
                      <li>
                        <time datetime="2018"><%= comment.created_at %></time>
                        <td><%= link_to 'Destroy', post_comment_path(@post, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </li>
                      <li><a class="comment-classic-reply" href="#" aria-label="reply"></a></li>
                    </ul>
                  </div>
                </article>
                <% end %>



              </div>
            </div>
            <div class="section-sm section-bottom-0">
              <h3>Send a Comment</h3>
              <%= form_with(model: @comment, url: post_comments_path(@post), local: true) do |form| %>
                <% if @comment.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h2>

                    <ul>
                    <% @comment.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>


                <div class="field">
                  <label class="form-label-outside" for="comment-message">Your Message</label>
                  <%= form.text_area :content, class: "form-input" %>
                </div>
                <br>
                <div class="actions ">
                  <button class="button button-primary button-winona" type="submit">Submit</button>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-lg-4">
            <!-- Profile Thin-->
            <article class="profile-thin">
              <div class="profile-thin-aside"><img class="profile-thin-image" src="<%=  %>" alt="" width="168" height="168"/><a class="profile-thin-contact-button" href="mailto:#"><span class="icon mdi mdi-email-outline"></span><span class="icon mdi mdi-email-outline"></span></a>
              </div>
              <div class="profile-thin-main">
                <p class="profile-thin-title">Theresa Barnes</p>
                <p class="profile-thin-subtitle">Music teacher, Blogger</p>
                <p>I am a professional blogger interested in everything taking place in cyberspace. I try my best to make this website a better place to visit.</p>
                <div class="group group-xs group-middle"><a class="icon icon-sm icon-creative mdi mdi-facebook" href="#"></a><a class="icon icon-sm icon-creative mdi mdi-twitter" href="#"></a><a class="icon icon-sm icon-creative mdi mdi-instagram" href="#"></a><a class="icon icon-sm icon-creative mdi mdi-google" href="#"></a><a class="icon icon-sm icon-creative mdi mdi-linkedin" href="#"></a></div><a class="button button-sm button-primary-outline button-winona" href="#">View full profile</a>
              </div>
            </article>
          </div>
        </div>
      </div>
    </section>
  </div>
