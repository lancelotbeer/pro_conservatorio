              <h2 class="breadcrumbs-custom-title">Cursos</h2>
            </div>
            <ul class="breadcrumbs-custom-path">
              <li><a href="index.html">Cursos</a></li>
              <li class="active">Nuevo Curso</li>
            </ul>
          </div>
        </div>
      </section>

      <section class="section bg-gray-100">
        <div class="range justify-content-xl-between">
          <div class="cell-xl-6 align-self-center container">
            <div class="row">
              <div class="col-lg-9 cell-inner">
                <div class="section-lg">
                  <h3 class="wow-outer"><span class="wow slideInDown">Ingrese Datos del nuevo curso</span></h3>
                  <!-- RD Mailform-->
                  <!-- Nuevo Form -->
                  <%= form_with(model: @course, local: true, class: 'rd-form rd-mailform') do |form| %>
                  <% if @course.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this post from being saved:</h2>

                      <ul>
                      <% @course.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>
                        <div class="row row-10">
                          <div class="col-md-6 wow-outer">
                            <div class="form-wrap wow fadeSlideInUp">
                              <%= form.label :image, id: :course_image, class:'form-label-outside' %>
                              <%= form.file_field :image, class: 'form-input' %>
                            </div>
                          </div>

                          <div class="col-md-6 wow-outer">
                            <div class="form-wrap wow fadeSlideInUp">
                              <%= form.label :name, id: :course_name, class:'form-label-outside' %>
                              <%= form.text_field :name, class: 'form-input' %>
                            </div>
                          </div>

                          <div class="col-12 wow-outer">
                            <div class="form-wrap wow fadeSlideInUp">
                                <%= form.label :description, class: 'form-label-outside' %>
                                <%= form.text_area :description, class:'form-input'  %>
                            </div>
                          </div>
                        </div>
                        <div class="group group-middle">
                          <div class="wow-outer">
                            <%= form.submit 'Crear Curso', class: 'button button-primary button-winona wow slideInRight' %>
                          </div>
                        </div>
                    <% end %>
                </div>
              </div>
            </div>
